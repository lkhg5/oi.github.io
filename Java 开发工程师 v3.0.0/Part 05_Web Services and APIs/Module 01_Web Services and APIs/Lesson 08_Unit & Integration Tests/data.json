            {
              "id": 899583,
              "key": "ee1beb4e-63f9-4512-a435-239f4e9e5b68",
              "title": "JAVA C2 L8 05 Integration Testing",
              "semantic_type": "VideoAtom",
              "is_public": true,
              "instructor_notes": "",
              "video": {
                "youtube_id": "LXOIVFISNmE",
                "china_cdn_id": "LXOIVFISNmE.mp4"
