            {
              "id": 899581,
              "key": "e5028b6b-4931-4ce4-87fb-2617e85235c8",
              "title": "JAVA C2 L8 03 Unit Testing",
              "semantic_type": "VideoAtom",
              "is_public": true,
              "instructor_notes": "",
